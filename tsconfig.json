{
  "compilerOptions": {
    "outDir": "build",
    "jsx": "preserve",
    "types": ["vite/client", "@types/jest"],
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./components.d.ts"
  ],
  "exclude": ["node_modules"]
}
